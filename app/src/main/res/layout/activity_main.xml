        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px20"
        android:text="@string/skin_text"
        android:background="@color/skin_btn"/>-->

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skin_btn"/>
</LinearLayout>